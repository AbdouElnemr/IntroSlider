<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".activities.Students">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimaryDark"
        >
        <com.codex.eduapp.school.helper.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Attendence"
            android:textColor="#FFFFFF"
            android:padding="5dp"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/et_back"
            android:layout_gravity="start"
            android:src="@drawable/arrow_back"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:orientation="vertical"
        android:layout_below="@+id/toolbar">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkAll"
            android:id="@+id/attendanceStudent"
            android:textSize="20sp"
             android:textColor="#fff"
             />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:id="@+id/rec_student"
            android:layout_marginBottom="60dp"
            tools:listitem="@layout/attendceitem_list"
            />
    </LinearLayout>



        <com.codex.eduapp.school.helper.MyTextView
            android:id="@+id/wait_approve_txt"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/Save"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="19sp"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true"
            android:textColor="@color/x_bottom_process_button_text" />


</RelativeLayout>